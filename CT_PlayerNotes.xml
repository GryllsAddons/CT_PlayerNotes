							<TexCoords left="0" right="0.2539" top="0" bottom="1.0"/>
						</Texture>
						<Texture name="$parentRight" file="Interface\ChatFrame\UI-ChatInputBorder-Right">
							<Size>
								<AbsDimension x="25" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="RIGHT">
									<Offset>
